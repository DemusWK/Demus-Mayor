<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:isScrollContainer="true"
	tools:ignore="RtlHardcoded">

	<include
		android:id="@+id/tool_bar"
		layout="@layout/tool_bar" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none"
		android:orientation="vertical">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/light_grey_bg"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="25dp"
						android:layout_marginBottom="20dp"
						android:layout_marginLeft="@dimen/general_margin"
						android:layout_marginRight="@dimen/general_margin"
						android:text="@string/select_netw"
						android:textColor="@color/gray_text"
						android:textSize="18sp"
						/>



					<androidx.cardview.widget.CardView
						android:id="@+id/home_network_spinner_card"
						android:layout_width="match_parent"
						android:layout_height="55dp"
						app:cardElevation="3dp"
						android:fadingEdgeLength="20dp"
						app:cardCornerRadius="6dp"
						android:background="@color/white"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_marginBottom="10dp">

						<Spinner
							android:id="@+id/spinNetwork"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:background="@drawable/new_spinner_bg"
							tools:ignore="InefficientWeight" />
					</androidx.cardview.widget.CardView>


					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="55dp"
						app:cardElevation="3dp"
						android:fadingEdgeLength="20dp"
						app:cardCornerRadius="6dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_marginBottom="10dp">

						<EditText
							android:id="@+id/txtPhon"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:hint="@string/phone_num"
							android:inputType="number"
							android:maxLength="11"
							android:background="@color/white"
							android:drawablePadding="10dp"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
							android:paddingStart="10dp"
							android:singleLine="true"
							android:textColor="@color/dart_blue"
							android:textSize="16sp" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="55dp"
						app:cardElevation="3dp"
						android:fadingEdgeLength="20dp"
						app:cardCornerRadius="6dp"
						android:background="@color/white"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_marginBottom="10dp">

						<EditText
							android:id="@+id/txtFName"
							android:layout_width="match_parent"
							android:layout_height="55dp"
							android:layout_marginBottom="10dp"
							android:hint="@string/fname"
							android:inputType="text"
							android:maxLength="50"
							android:background="@color/white"
							android:drawablePadding="10dp"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
							android:paddingStart="10dp"
							android:singleLine="true"
							android:textColor="@color/dart_blue"
							android:textSize="16sp" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="55dp"
						app:cardElevation="3dp"
						android:fadingEdgeLength="20dp"
						app:cardCornerRadius="6dp"
						android:background="@color/white"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_marginBottom="10dp">

						<EditText
							android:id="@+id/txtLName"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:hint="@string/lname"
							android:inputType="text"
							android:maxLength="50"
							android:background="@color/white"
							android:drawablePadding="10dp"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
							android:paddingStart="10dp"
							android:singleLine="true"
							android:textColor="@color/dart_blue"
							android:textSize="16sp" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="55dp"
						app:cardElevation="3dp"
						android:fadingEdgeLength="20dp"
						app:cardCornerRadius="6dp"
						android:background="@color/white"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_marginBottom="10dp">

						<EditText
							android:id="@+id/txtEmail"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:hint="@string/email"
							android:inputType="textEmailAddress"
							android:maxLength="50"
							android:background="@color/white"
							android:drawablePadding="10dp"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
							android:paddingStart="10dp"
							android:singleLine="true"
							android:textColor="@color/dart_blue"
							android:textSize="16sp" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="55dp"
						app:cardElevation="3dp"
						android:fadingEdgeLength="20dp"
						app:cardCornerRadius="6dp"
						android:background="@color/white"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_marginBottom="10dp">

						<EditText
							android:id="@+id/txtPassword"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
							android:paddingStart="10dp"
							android:background="@drawable/input_field_bg"
							android:maxLength="20"
							android:drawablePadding="10dp"
							android:hint="@string/password"
							android:inputType="textPassword"
							android:singleLine="true"
							android:textColor="@color/dart_blue"
							android:textSize="16sp" />
					</androidx.cardview.widget.CardView>




					<CheckBox
						android:id="@+id/chkPass"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/general_margin_small"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:textColor="@color/red_color"
						android:textSize="15sp"
						android:layout_marginTop="@dimen/general_margin_small"
						android:text="@string/show_password" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="5dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:text="@string/enter_secret_pin"
						android:textColor="@color/gray_text"
						android:textSize="16sp" />

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="55dp"
						app:cardElevation="3dp"
						android:fadingEdgeLength="20dp"
						app:cardCornerRadius="6dp"
						android:background="@color/white"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_marginBottom="10dp">

						<EditText
							android:id="@+id/txtPin"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:background="@color/white"
							android:inputType="numberPassword"
							android:gravity="center"
							android:maxLength="4"
							android:textScaleX="1.2"
							android:singleLine="true"
							android:textColor="@color/dart_blue"
							android:textSize="25sp" />

					</androidx.cardview.widget.CardView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/confirm_pin"
						android:layout_marginBottom="5dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:textColor="@color/gray_text"
						android:textSize="16sp" />

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="55dp"
						app:cardElevation="3dp"
						android:fadingEdgeLength="20dp"
						app:cardCornerRadius="6dp"
						android:background="@color/white"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_marginBottom="10dp">

						<EditText
							android:id="@+id/txtConfirmPin"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:background="@drawable/input_field_bg"
							android:inputType="numberPassword"
							android:gravity="center"
							android:maxLength="4"
							android:textScaleX="1.2"
							android:singleLine="true"
							android:textColor="@color/dart_blue"
							android:textSize="25sp" />
					</androidx.cardview.widget.CardView>
				</LinearLayout>

				<Button
					android:id="@+id/home_recharge_btn_top"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:layout_margin="20dp"
					android:background="@drawable/green_btn_bg"
					android:text="@string/register_caps"
					android:textColor="#ffffff"
					android:textSize="17sp" />
			</LinearLayout>

			<RelativeLayout
				android:id="@+id/layProgress"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone"
				android:background="#A5000000"
				android:orientation="vertical">

				<ProgressBar
					android:id="@+id/progressBar"
					android:indeterminate="true"
					android:layout_width="72dp"
					android:layout_height="72dp"
					android:layout_centerInParent="true" />
			</RelativeLayout>
		</FrameLayout>
	</ScrollView>
</LinearLayout>
